<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd ">
<tiles-definitions>
    
    <definition name="default" template="/WEB-INF/layouts/classic.jsp">
        <put-attribute name="post-head" value="" />
        <put-attribute name="body" value="" />
        <put-attribute name="post-body" value="" />
    </definition>
    
    <definition name="REGEXP:([^/].*)" extends="default">
	   
		<put-attribute name="post-head" value="/WEB-INF/views/{options[myopts]}/post-head.jsp" />
	    <put-attribute name="body" value="/WEB-INF/views/{options[myopts]}/body.jsp" />
	    <put-attribute name="post-body" value="/WEB-INF/views/{options[myopts]}/post-body.jsp" />
	
		<put-list-attribute name="myopts" cascade="true">
	        <add-attribute value="{1}"/>
	        <add-attribute value="common"/>
	    </put-list-attribute>
	</definition>
  
</tiles-definitions>